  "netbox": {
    "_description": "NetBox IPAM system integration",
    "enabled": false,
    "base_url": "https://netbox.example.com",
    "authentication": {
      "method": "api_token",
      "api_token": "your_netbox_api_token_here",
      "headers": {
        "Authorization": "Token your_netbox_api_token_here"
      }
    },
    "verify_ssl": true,
    "timeout": 30,
    "endpoints": {
      "ip_addresses": "/api/ipam/ip-addresses/",
      "prefixes": "/api/ipam/prefixes/",
      "devices": "/api/dcim/devices/",
      "interfaces": "/api/dcim/interfaces/"
    }
  },
  
  "checkmk": {
    "_description": "CheckMK monitoring system integration",
    "enabled": false,
    "base_url": "https://checkmk.example.com/site/monitoring",
    "authentication": {
      "method": "basic_auth",
      "username": "your_checkmk_username",
      "password": "your_checkmk_password",
      "headers": {
        "Accept": "application/json",
        "Content-Type": "application/json"
      }
    },
    "verify_ssl": true,
    "timeout": 30,
    "endpoints": {
      "hosts": "/check_mk/api/1.0/domain-types/host_config/collections/all",
      "services": "/check_mk/api/1.0/domain-types/service/collections/all",
      "host_status": "/check_mk/api/1.0/domain-types/host/collections/all"
    }
  },
  
  "openvas": {
    "_description": "OpenVAS vulnerability assessment integration",
    "enabled": false,
    "base_url": "https://openvas.example.com",
    "authentication": {
      "method": "api_token",
      "api_token": "your_openvas_api_token_here",
      "headers": {
        "Authorization": "Bearer your_openvas_api_token_here",
        "Content-Type": "application/json"
      }
    },
    "verify_ssl": true,
    "timeout": 60,
    "endpoints": {
      "targets": "/api/v1/targets",
      "tasks": "/api/v1/tasks",
      "reports": "/api/v1/reports",
      "results": "/api/v1/results"
    }
  },
  
  "openitcockpit": {
    "_description": "OpenITCockpit IT management integration (planned for later release)",
    "enabled": false,
    "base_url": "https://openitcockpit.example.com",
    "authentication": {
      "method": "api_token",
      "api_token": "your_openitcockpit_api_token_here",
      "headers": {
        "Authorization": "Bearer your_openitcockpit_api_token_here"
      }
    },
    "verify_ssl": true,
    "timeout": 30,
    "endpoints": {
      "hosts": "/api/hosts",
      "services": "/api/services",
      "incidents": "/api/incidents"
    }
  },
  
  "infoblox": {
    "_description": "Infoblox DNS/DHCP system integration (planned for later release)",
    "enabled": false,
    "base_url": "https://infoblox.example.com",
    "authentication": {
      "method": "basic_auth",
      "username": "your_infoblox_username",
      "password": "your_infoblox_password",
      "headers": {
        "Content-Type": "application/json"
      }
    },
    "verify_ssl": true,
    "timeout": 30,
    "endpoints": {
      "networks": "/wapi/v2.12/network",
      "hosts": "/wapi/v2.12/record:host",
      "leases": "/wapi/v2.12/lease"
    }
  },
  
  "_authentication_methods": {
    "_description": "Supported authentication methods and their configuration",
    "api_token": {
      "description": "API token-based authentication",
      "required_fields": ["api_token"],
      "header_format": "Token {api_token} or Bearer {api_token}"
    },
    "basic_auth": {
      "description": "HTTP Basic Authentication",
      "required_fields": ["username", "password"],
      "encoding": "base64(username:password)"
    },
    "custom_headers": {
      "description": "Custom header-based authentication",
      "required_fields": ["headers"],
      "note": "Define custom headers in the headers object"
    }
  }
}